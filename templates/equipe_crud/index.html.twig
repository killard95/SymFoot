{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
    <h1>Equipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Budget</th>
                <th>Renommee</th>
                <th>Points</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.nom }}</td>
                <td>{{ equipe.ville }}</td>
                <td>{{ equipe.budget }}</td>
                <td>{{ equipe.renommee }}</td>
                <td>{{ equipe.points }}</td>
                <td>
                    <a href="{{ path('app_equipe_crud_show', {'id': equipe.id}) }}">show</a>
                    <a href="{{ path('app_equipe_crud_edit', {'id': equipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipe_crud_new') }}">Create new</a>
{% endblock %}
